# AciTrack Backend - Environment Variables Template
# Copy this file to .env for local development
# DO NOT commit .env to git

# Required: Postgres connection string
# Example: postgresql://user:password@host:5432/database
DATABASE_URL=postgresql://user:password@host:5432/database

# Required: API key for protected endpoints
ACITRACK_API_KEY=replace-with-random-hex

# Required: Secret used to sign/verify weekly digest feedback links
DIGEST_FEEDBACK_SECRET=replace-with-strong-random-secret

# Optional: feedback link max age in seconds (default 90 days = 7776000)
FEEDBACK_MAX_AGE_SECONDS=7776000

# Optional: log level
LOG_LEVEL=INFO

# Optional: port (defaults to 8000)
PORT=8000
