# AciTrack Backend - Environment Variables Template
# Copy this file to .env for local development
# DO NOT commit .env to git

# Google Drive Folder ID
# Find this in the URL: https://drive.google.com/drive/folders/[FOLDER_ID]
ACITRACK_DRIVE_FOLDER_ID=your-folder-id-here

# Google Cloud Service Account JSON
# Paste the entire service account JSON as a single-line string
# Remove all line breaks and format as: {"type":"service_account",...}
ACITRACK_GCP_SA_JSON={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}

# Port (optional, defaults to 8000)
# Railway and Render will set this automatically
PORT=8000
