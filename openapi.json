{
  "openapi": "3.0.1",
  "info": {
    "title": "AciTrack API",
    "description": "Postgres-backed API for accessing academic publication tracking data from the AciTrack system. Includes semantic search powered by pgvector for conceptual queries across all historical publications. Use /search/publications for database-wide conceptual queries like 'dogs sniffing cancer' or 'liquid biopsy early detection'.",
    "version": "2.1.0"
  },
  "servers": [
    {
      "url": "https://your-app-name.onrender.com",
      "description": "Production server (replace with your actual Render URL)"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "operationId": "healthCheck",
        "summary": "Health check endpoint",
        "description": "Verifies service health and database connectivity",
        "responses": {
          "200": {
            "description": "Service health status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "healthy"
                    },
                    "db_connected": {
                      "type": "boolean",
                      "example": true
                    },
                    "db_host": {
                      "type": "string"
                    },
                    "time": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/search/publications": {
      "get": {
        "operationId": "searchPublications",
        "summary": "Semantic search across all publications",
        "description": "Use this endpoint for conceptual, database-wide queries. Searches across ALL historical publications using AI-powered semantic similarity (pgvector). Examples: 'dogs sniffing cancer', 'liquid biopsy early detection', 'machine learning diagnostic imaging'. Returns ranked results by semantic relevance with optional score and date filters.",
        "security": [{"ApiKeyAuth": []}],
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Search query - natural language description of what you're looking for",
            "required": true,
            "schema": {
              "type": "string",
              "minLength": 1,
              "maxLength": 500
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum results to return",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20,
              "minimum": 1,
              "maximum": 100
            }
          },
          {
            "name": "min_relevancy",
            "in": "query",
            "description": "Filter out results below this relevancy score (0-100)",
            "required": false,
            "schema": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            }
          },
          {
            "name": "min_credibility",
            "in": "query",
            "description": "Filter out results below this credibility score (0-100)",
            "required": false,
            "schema": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            }
          },
          {
            "name": "date_from",
            "in": "query",
            "description": "Only include publications from this date (YYYY-MM-DD)",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "date_to",
            "in": "query",
            "description": "Only include publications up to this date (YYYY-MM-DD)",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Semantic search results ranked by relevance",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchResults"
                }
              }
            }
          },
          "400": {
            "description": "Invalid query parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "503": {
            "description": "Semantic search unavailable (embeddings not configured or backfill needed)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/search/status": {
      "get": {
        "operationId": "searchStatus",
        "summary": "Check semantic search availability",
        "description": "Returns information about semantic search functionality including pgvector status, API configuration, and embedding coverage",
        "security": [{"ApiKeyAuth": []}],
        "responses": {
          "200": {
            "description": "Search system status",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchStatus"
                }
              }
            }
          }
        }
      }
    },
    "/runs/latest": {
      "get": {
        "operationId": "getLatestRun",
        "summary": "Get latest run for a mode",
        "description": "Returns the most recent run metadata for a specific mode (tri-model-daily, daily, or weekly)",
        "security": [{"ApiKeyAuth": []}],
        "parameters": [
          {
            "name": "mode",
            "in": "query",
            "description": "Run mode: tri-model-daily, daily, or weekly",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["tri-model-daily", "daily", "weekly"],
              "default": "tri-model-daily"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Latest run metadata",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Run"
                }
              }
            }
          },
          "404": {
            "description": "No runs found for mode",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/runs/{run_id}": {
      "get": {
        "operationId": "getRunById",
        "summary": "Get run by ID",
        "description": "Returns run metadata for a specific run_id",
        "security": [{"ApiKeyAuth": []}],
        "parameters": [
          {
            "name": "run_id",
            "in": "path",
            "description": "Unique run identifier",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Run metadata",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Run"
                }
              }
            }
          },
          "404": {
            "description": "Run not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/must-reads": {
      "get": {
        "operationId": "getMustReads",
        "summary": "Get must-read publications",
        "description": "Returns must-read publications for a specific mode or run_id",
        "security": [{"ApiKeyAuth": []}],
        "parameters": [
          {
            "name": "mode",
            "in": "query",
            "description": "Run mode to get latest must-reads",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["tri-model-daily", "daily", "weekly"]
            }
          },
          {
            "name": "run_id",
            "in": "query",
            "description": "Specific run_id to get must-reads",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Must-read publications",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "run_id": {
                      "type": "string"
                    },
                    "mode": {
                      "type": "string"
                    },
                    "must_reads": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "created_at": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "updated_at": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing required query parameter",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Must-reads not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/paper/{publication_id}": {
      "get": {
        "operationId": "getPaper",
        "summary": "Get paper tri-model evaluation",
        "description": "Returns tri-model event data for a specific publication",
        "security": [{"ApiKeyAuth": []}],
        "parameters": [
          {
            "name": "publication_id",
            "in": "path",
            "description": "Publication identifier",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "run_id",
            "in": "query",
            "description": "Optional run_id filter",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tri-model event data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TriModelEvent"
                }
              }
            }
          },
          "404": {
            "description": "Publication not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/disagreements": {
      "get": {
        "operationId": "getDisagreements",
        "summary": "Get model disagreements",
        "description": "Returns tri-model events with disagreements, with optional filtering",
        "security": [{"ApiKeyAuth": []}],
        "parameters": [
          {
            "name": "run_id",
            "in": "query",
            "description": "Filter by run_id",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "agreement",
            "in": "query",
            "description": "Comma-separated agreement levels (e.g., 'low,moderate')",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "min_delta",
            "in": "query",
            "description": "Minimum score delta between models",
            "required": false,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum results to return (default 50, max 500)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 50,
              "minimum": 1,
              "maximum": 500
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of disagreements",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "count": {
                      "type": "integer"
                    },
                    "filters": {
                      "type": "object"
                    },
                    "disagreements": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/DisagreementEvent"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/calibration/items/seed": {
      "post": {
        "operationId": "seedCalibrationItems",
        "summary": "Seed calibration items",
        "description": "Seed calibration items from a list of publication IDs for human labeling",
        "security": [{"ApiKeyAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SeedItemsRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Seeding result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "seeded": {"type": "integer"},
                    "skipped_existing": {"type": "integer"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/calibration/items/seed-mustreads": {
      "post": {
        "operationId": "seedMustReads",
        "summary": "Seed must-reads for calibration",
        "description": "Seed calibration items from the latest run's must-reads",
        "security": [{"ApiKeyAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "run_id": {"type": "string"},
                  "mode": {"type": "string", "default": "tri-model-daily"},
                  "tags": {"type": "object"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Seeding result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "seeded": {"type": "integer"},
                    "skipped_existing": {"type": "integer"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/calibration/next": {
      "get": {
        "operationId": "getNextCalibrationItem",
        "summary": "Get next item to rate",
        "description": "Get the next calibration item for an evaluator to rate",
        "security": [{"ApiKeyAuth": []}],
        "parameters": [
          {
            "name": "evaluator",
            "in": "query",
            "required": true,
            "schema": {"type": "string"}
          },
          {
            "name": "strategy",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["balanced", "gold_first", "random"],
              "default": "balanced"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Next calibration item or null",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CalibrationItem"
                }
              }
            }
          }
        }
      }
    },
    "/calibration/submit": {
      "post": {
        "operationId": "submitCalibrationRating",
        "summary": "Submit a rating",
        "description": "Submit a human evaluation for a calibration item",
        "security": [{"ApiKeyAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SubmitEvaluationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Submission result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string"},
                    "llm_score": {"type": "number"}
                  }
                }
              }
            }
          },
          "409": {
            "description": "Already rated this item"
          }
        }
      }
    },
    "/calibration/stats": {
      "get": {
        "operationId": "getCalibrationStats",
        "summary": "Get calibration statistics",
        "description": "Get statistics about calibration progress",
        "security": [{"ApiKeyAuth": []}],
        "parameters": [
          {
            "name": "evaluator",
            "in": "query",
            "required": false,
            "schema": {"type": "string"}
          }
        ],
        "responses": {
          "200": {
            "description": "Calibration statistics",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CalibrationStats"
                }
              }
            }
          }
        }
      }
    },
    "/calibration/export": {
      "get": {
        "operationId": "exportCalibrationData",
        "summary": "Export calibration data",
        "description": "Export all calibration data as CSV or JSON lines",
        "security": [{"ApiKeyAuth": []}],
        "parameters": [
          {
            "name": "format",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["csv", "jsonl"],
              "default": "csv"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Export file",
            "content": {
              "text/csv": {},
              "application/x-ndjson": {}
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key",
        "description": "API key for authentication. Required for all endpoints except /health."
      }
    },
    "schemas": {
      "SearchResults": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "The search query that was executed"
          },
          "count": {
            "type": "integer",
            "description": "Number of results returned"
          },
          "filters": {
            "type": "object",
            "description": "Applied filters",
            "properties": {
              "min_relevancy": {
                "type": "number"
              },
              "min_credibility": {
                "type": "number"
              },
              "date_from": {
                "type": "string"
              },
              "date_to": {
                "type": "string"
              }
            }
          },
          "results": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SearchResult"
            }
          }
        }
      },
      "SearchResult": {
        "type": "object",
        "properties": {
          "publication_id": {
            "type": "string",
            "description": "Unique publication identifier"
          },
          "title": {
            "type": "string",
            "description": "Publication title"
          },
          "source": {
            "type": "string",
            "description": "Publication source/journal"
          },
          "published_date": {
            "type": "string",
            "format": "date",
            "description": "Publication date"
          },
          "best_run_id": {
            "type": "string",
            "description": "Most recent run_id where this publication was evaluated"
          },
          "final_relevancy_score": {
            "type": "number",
            "description": "Final relevancy score from tri-model evaluation (0-100)"
          },
          "credibility_score": {
            "type": "number",
            "description": "Credibility score (0-100)"
          },
          "final_summary": {
            "type": "string",
            "description": "Brief summary of the publication (max 500 chars)"
          },
          "similarity": {
            "type": "number",
            "description": "Semantic similarity score (0-1, higher is more relevant)"
          }
        }
      },
      "SearchStatus": {
        "type": "object",
        "properties": {
          "pgvector_available": {
            "type": "boolean",
            "description": "Whether pgvector extension is installed"
          },
          "openai_configured": {
            "type": "boolean",
            "description": "Whether OpenAI API key is configured"
          },
          "embedding_model": {
            "type": "string",
            "description": "Embedding model being used"
          },
          "publications_with_embeddings": {
            "type": "integer",
            "description": "Number of publications that have embeddings"
          },
          "total_unique_publications": {
            "type": "integer",
            "description": "Total unique publications in database"
          },
          "coverage_percent": {
            "type": "number",
            "description": "Percentage of publications with embeddings"
          },
          "search_available": {
            "type": "boolean",
            "description": "Whether semantic search is fully operational"
          }
        }
      },
      "Run": {
        "type": "object",
        "properties": {
          "run_id": {
            "type": "string"
          },
          "mode": {
            "type": "string"
          },
          "started_at": {
            "type": "string",
            "format": "date-time"
          },
          "window_start": {
            "type": "string",
            "format": "date-time"
          },
          "window_end": {
            "type": "string",
            "format": "date-time"
          },
          "counts": {
            "type": "object"
          },
          "config": {
            "type": "object"
          },
          "artifacts": {
            "type": "object"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "TriModelEvent": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "run_id": {
            "type": "string"
          },
          "mode": {
            "type": "string"
          },
          "publication_id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "agreement_level": {
            "type": "string",
            "enum": ["high", "moderate", "low"]
          },
          "disagreements": {
            "type": "string"
          },
          "evaluator_rationale": {
            "type": "string"
          },
          "claude_review": {
            "type": "object"
          },
          "gemini_review": {
            "type": "object"
          },
          "gpt_eval": {
            "type": "object"
          },
          "final_relevancy_score": {
            "type": "number"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "DisagreementEvent": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "run_id": {
            "type": "string"
          },
          "mode": {
            "type": "string"
          },
          "publication_id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "agreement_level": {
            "type": "string"
          },
          "disagreements": {
            "type": "string"
          },
          "evaluator_rationale": {
            "type": "string"
          },
          "claude_score": {
            "type": "number"
          },
          "gemini_score": {
            "type": "number"
          },
          "score_delta": {
            "type": "number"
          },
          "final_relevancy_score": {
            "type": "number"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "detail": {
            "type": "string",
            "description": "Error message"
          }
        },
        "required": ["detail"]
      },
      "SeedItemsRequest": {
        "type": "object",
        "required": ["publication_ids"],
        "properties": {
          "publication_ids": {
            "type": "array",
            "items": {"type": "string"},
            "description": "List of publication IDs to seed for calibration"
          },
          "mode": {
            "type": "string",
            "description": "Run mode (e.g., tri-model-daily)"
          },
          "tags": {
            "type": "object",
            "description": "Tags to apply to seeded items (e.g., {\"gold\": true})"
          }
        }
      },
      "SubmitEvaluationRequest": {
        "type": "object",
        "required": ["calibration_item_id", "evaluator", "human_score", "reasoning"],
        "properties": {
          "calibration_item_id": {
            "type": "string",
            "format": "uuid",
            "description": "UUID of the calibration item being rated"
          },
          "evaluator": {
            "type": "string",
            "description": "Name/identifier of the evaluator"
          },
          "human_score": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "description": "Human relevancy score (0-100)"
          },
          "reasoning": {
            "type": "string",
            "minLength": 1,
            "description": "Explanation for the score"
          },
          "confidence": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "description": "Evaluator's confidence level"
          }
        }
      },
      "CalibrationItem": {
        "type": "object",
        "properties": {
          "calibration_item_id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for the calibration item"
          },
